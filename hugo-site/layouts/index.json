{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.RegularPages "Type" "in" (slice "docs" "page") -}}
  {{- $.Scratch.Add "index" (dict
    "title" .Title
    "permalink" .Permalink
    "content" (.Plain | htmlUnescape)
    "section" .Section
    "categories" .Params.categories
    "tags" .Params.tags
    "date" .Date
  ) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
